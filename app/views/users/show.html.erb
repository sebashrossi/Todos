<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Todos:</strong>
  <ul>
    <% @user.todos.each do |todo| %>
      <li><%= link_to todo.name, user_todo_path(@user,todo) %> - <%= todo.status %></li>
    <% end %>
  </ul>

  <%= link_to 'Add Todo', new_user_todo_path(@user) %>

</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
