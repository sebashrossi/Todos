<div class='main-container'>
  <p id="notice"><%= notice %></p>
  <div class='note-section'>
    <h1 class='title'><%= @user.name %></h1>
    <p><%= @user.email %></p>
    <div class="table-container">
      <div class='user-content'>
        <% if @user.todos.empty? %>
          <p>No Todos have been assigned to this user</p>
        <% else %>
          <table>
            <thead>
              <tr>
                <th></th>
                <th>Name</th>
                <th>Status</th>
                <th colspan="3"></th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @user.todos.each do |todo| %>
                <tr>
                  <td>
                    <% if todo.done? %>
                      <i class="fa-solid fa-circle-check"></i>
                    <% end %>
                  </td>
                  <td><%= todo.name %></td>
                  <td><%= todo.status.titleize %></td>
                  <td></td>
                  <td>
                    <%= link_to edit_user_todo_path(@user,todo) do %>
                      <i class="fa-solid fa-pen-to-square"></i>
                    <% end %>
                    <%= link_to user_todo_path(@user,todo), method: :delete, remote: true, data: { confirm: 'Are you sure?' } do %>
                      <i class="fa-solid fa-trash"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <%end %>
        <div class="action-btn">
          <%= link_to 'Add Todo', new_user_todo_path(@user) %>
        </div>
      </div>
      <div class="action-btn">
        <%= link_to 'Edit', edit_user_path(@user) %> |
        <%= link_to 'Back', users_path %>
      </div>
    </div>
  </div>
</div>
