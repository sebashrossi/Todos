<%= simple_form_for([@user, @todo]) do |form| %>
  <% if todo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
        <% todo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.input :status do %>
      <%= form.select :status, options_for_select(Todo.statuses.map {|key, value| [key.titleize, Todo.statuses.key(value)]}, @todo.status) %>
    <% end %>
  </div>

  <div class="action-btn">
    <%= form.submit %>
  </div>
<% end %>
