<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.name %></td>
        <td><%= todo.status %></td>
        <td><%= todo.user_id %></td>
        <td><%= link_to 'Show', user_todo_url({user_id: @user.id, id: todo.id}) %></td>
        <td><%= link_to 'Edit', edit_user_todo_path({user_id: @user.id, id: todo.id}) %></td>
        <td><%= link_to 'Destroy', user_todo_url({user_id: @user.id, id: todo.id}), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_user_todo_path(@user) %>
